<?xml version="1.0" encoding="utf-8"?>

<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:WantApp.Views;assembly=WantApp"
             x:Class="WantApp.Views.AppShell"
             BackgroundColor="{Binding CurrentTheme.BackgroundColor}"
             TitleColor="{Binding CurrentTheme.TitleColor}"
             UnselectedColor = "{Binding CurrentTheme.UnselectedColor}">

    <TabBar>
        <Tab Icon="Paint_Palette.png">
            <ShellContent ContentTemplate="{DataTemplate views:ChangeTheme}"/>
        </Tab>
        
        <Tab  Icon="star.png">
            <ShellContent ContentTemplate="{DataTemplate views:Favorites}"/>
        </Tab>

        <Tab Icon="earth.png">
            <ShellContent ContentTemplate="{DataTemplate views:Map}"/>
        </Tab>

        <Tab Icon="list_task.png">
            <ShellContent ContentTemplate="{DataTemplate views:Menu}"/>
        </Tab>

        <Tab Icon="settings.png">
            <ShellContent ContentTemplate="{DataTemplate views:Settings}"/>
        </Tab>

    </TabBar>
</Shell>