<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WantApp" xmlns:viewmodels="clr-namespace:WantApp"
             x:Class="WantApp.Views.Favorites"
             BackgroundColor="{DynamicResource PageBackgroundColor}"
             IconImageSource="favorites.png">

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Здесь будут размещены кнопки, добавленные пользователем в избранные. Так пользователь сможет экономить свое время на поиске часто используемых кнопок"
                   FontSize="30"
                   Style="{DynamicResource TextStyle}"
                   VerticalOptions="StartAndExpand" 
                   HorizontalTextAlignment="Center"
                   HorizontalOptions="CenterAndExpand" />
            <Button Text="Кнопки"
                    Style="{DynamicResource ButtonStyle}"
                    VerticalOptions="StartAndExpand"/>
            <Button Text="Будут"
                    Style="{DynamicResource ButtonStyle}"
                    VerticalOptions="StartAndExpand"/>
            <Button Text="Выглядеть"
                    Style="{DynamicResource ButtonStyle}"
                    VerticalOptions="StartAndExpand"/>
            <Button Text="Так"
                    Style="{DynamicResource ButtonStyle}"
                    VerticalOptions="StartAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>