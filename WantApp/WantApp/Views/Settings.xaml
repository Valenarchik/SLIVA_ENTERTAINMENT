<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WantApp.Views.Settings"
             BackgroundColor="{DynamicResource FirstColor}"
             IconImageSource="settings.png">
    <ContentPage.Content>
        <StackLayout>
            <Label Style="{DynamicResource TextStyle}"
                   Text="Панель настроек будет включать в себя возможность смены языка, корректировка звука и прочие параметры, регулировка которых позволит сделать приложение удобнее для пользователя"
                   FontSize="35"
                   HorizontalTextAlignment="Center"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>