<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WantApp.Views.Menu"
             BackgroundColor="{DynamicResource PageBackgroundColor}"
             IconImageSource="menu.png"
             Rotation="180">
    <ContentPage.Content>
        <StackLayout>
            <Label Style="{DynamicResource TextStyle}"
                   Text="В этом окне предполагается реализовать меню, в котором пользователь сможет изменять настройки стартовых кнопок и производить подгонку приложения под свои нужды"
                   FontSize="35"
                   HorizontalTextAlignment="Center"
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>